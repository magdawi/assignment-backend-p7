<style>
  .multi {
     column-count:3;
  }
</style>

<% content_for :heading do %>
  <h1>Suche</h1>
<% end %>


<h2>Nach dem Namen des Rezeptes</h2>

<%= bootstrap_form_tag url: recipes_path, method: :get do |f| %>
  <%= f.text_field :search, label: 'Suchbegriff' %>
  <%= f.submit "Suchen" %>
<% end %>

