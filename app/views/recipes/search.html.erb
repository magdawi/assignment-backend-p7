<%= bootstrap_form_tag url: recipes_path, method: :get do |f| %>
  <%= f.form_group :wanted_ingredient_ids do %>
    <% @ingredients.each do |ingredient| %>
      <label>
        <%= check_box_tag "wanted_ingredient_ids[]", ingredient.id %>
        <%= ingredient.name %>
      </label>
